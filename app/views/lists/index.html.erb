
<%= render 'header' %>

<div class="container">

  <div class="row justify-content-center">
    <div class="col-sm-12 col-lg-10">

      <div class="mt-3 text-center">
        <p><%= link_to "Create new List",  new_list_path(@list), class: "btn btn-success rounded-pill" %></p>
      </div>
    </div> 
  </div>

  <div class="row mt-5">
    <% @lists.each do |list| %> 
      <div class="col-sm-12 col-lg-2 p-2">
        <%= link_to list_path(list) do %>
          <div class="btn-blue btn-primary">
            <div class="d-flex align-items-center"  style="height: 100%;">
              <h5 class="mt-2 ms-4"><%= list.name %><i class="fas fa-play ms-3"></i></h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

